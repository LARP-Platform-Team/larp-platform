        </sql>

        <addNotNullConstraint columnName="storage"
                              schemaName="public"
                              tableName="game_resource"/>
    </changeSet>

    <changeSet author="Treble Snake" id="1443894068176-17">
        <dropIndex indexName="unique_resource_instance_title" tableName="resource_instance"/>
